<h2><center>Your Closet</center></h2>

<div class="container text-center">
    <div class="row">
    {{#each items}}
        <div class="col">
            <br>
            <img src="{{image}}">
            <h3>Item Type: {{this.type}}</h3>
            <h3>Size: {{this.size}}</h3>
            <h3>Color: {{this.color}}</h3>
            <h3>Brand: {{this.brand}}</h3>
            <h3>Description: {{this.description}}</h3>
            <h3>Category: {{this.category}}</h3>

            <br>
            
            <button>
                <a class="edit" href="/items/{{id}}/edit">Edit</a>
            </button>

          
            <br>
            <br>
            
            <form action="/items/{{this.id}}/delete" method="post">
                <button class="delete-btn" type="submit">Delete</button>
            </form>
            
            <br>

        </div>
    {{/each}}

    </div>

</div>
