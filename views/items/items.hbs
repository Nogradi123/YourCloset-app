<h2><center>Your Closet</center></h2>
<br>
<form class="filter-item" action="/items/filter" method="get">
<label>Filter by Item Type:</label>
    <select name="type">  
        <option value="T-Shirt">T-Shirt</option>
        <option value="Dress">Dress</option>
        <option value="Pant">Pant</option>
        <option value="Jean">Jean</option>
        <option value="Short">Short</option>
        <option value="Skirt">Skirt</option>
        <option value="Jacket">Jacket</option>
        <option value="Romper">Romper</option>
        <option value="Coat">Coat</option>
        <option value="Sweater">Sweater</option>
        <option value="Footwear">Footwear</option>
        <option value="Jewelry">Jewelry</option>
        <option value="Accessories">Accessories</option>
    </select>
    <button class="filter-btn" type="submit">filter</button>
</form>
<br>

{{#if recent}}
<a href="/items/items/notRecent">
    <button type="button">Sort By Oldest</button>
</a>
{{else}}
<a href="/items/items/recent">
    <button type="button">Sort By Newest</button>
</a>
{{/if}}

<div class="container text-center">
    <div class="row">
    {{#each items}}
        <div class="col">
            <br>
            <img src="{{image}}">
            <h3>Item Type: {{this.type}}</h3>
            <h3>Size: {{this.size}}</h3>
            <h3>Color: {{this.color}}</h3>
            <h3>Brand: {{this.brand}}</h3>
            <h3>Description: {{this.description}}</h3>
            <h3>Category: {{this.category}}</h3>

            <br>
            
            <button>
                <a class="edit" href="/items/{{id}}/edit">Edit</a>
            </button>

            <br>
            <br>
            
            <form action="/items/{{this.id}}/delete" method="post">
                <button class="delete-btn" type="submit">Delete</button>
            </form>
            
            <br>

        </div>
    {{/each}}

    </div>

</div>
