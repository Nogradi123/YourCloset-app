<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/items.css" />
</head>

<section>
<h2>Edit Item</h2>

<form action="/items/update/{{id}}" method="post">

<label>
    Item Name:
    <input type="text" name="itemName" value="{{itemName}}">
</label>
<br>
<label>
    Type of Item:
    <select name="type">  
        <option value="T-Shirt">T-Shirt</option>
        <option value="Dress">Dress</option>
        <option value="Pant">Pant</option>
        <option value="Jean">Jean</option>
        <option value="Short">Short</option>
        <option value="Skirt">Skirt</option>
        <option value="Jacket">Jacket</option>
        <option value="Romper">Romper</option>
        <option value="Coat">Coat</option>
        <option value="Sweater">Sweater</option>
        <option value="Footwear">Footwear</option>
        <option value="Jewelry">Jewelry</option>
        <option value="Accessories">Accessories</option>
    </select>
</label>
<br>
<label>
    Size:
    <input type="text" name="size" value="{{size}}">
</label>
<br>
<label>
    Brand:
    <input type="text" name="brand" value="{{brand}}">
</label>
<br>
<label>
    Color:
    <input type="text" name="color" value="{{color}}">
</label>
<br>
<label>
    Description:
    <input type="text" name="description"  value="{{description}}">
</label>
<br>
<label>Category:</label>
<br>
<div>

    {{#if Casual}}
    <label>
        <input type="checkbox" name="category" value="Casual" checked="checked">
        Casual
    </label>
    {{else}}
    <label>
        <input type="checkbox" name="category" value="Casual">
        Casual
    </label>
    {{/if}}
    
    {{#if Activewear}}
    <label>
        <input type="checkbox" name="category" value="Activewear" checked="checked">
        Activewear
    </label>
    {{else}}
    <label>
        <input type="checkbox" name="category" value="Activewear">
        Activewear
    </label>
    {{/if}}
    
    {{#if Goingout}}
    <label>
        <input type="checkbox" name="category" value="Going Out" checked="checked">
        Going Out
    </label>
    {{else}}
    <label>
        <input type="checkbox" name="category" value="Going Out">
        Going Out
    </label>
    {{/if}}

    {{#if Work}}
    <label>
        <input type="checkbox" name="category" value="Work" checked="checked">
        Work
    </label>
    {{else}}
    <label>
        <input type="checkbox" name="category" value="Work">
        Work
    </label>
    {{/if}}

    {{#if Formal}}
    <label>
        <input type="checkbox" name="category" value="Formal" checked="checked">
        Formal
    </label>
    {{else}}
    <label>
        <input type="checkbox" name="category" value="Formal">
        Formal
    </label>
    {{/if}}



</div>

<br>
<button>Edit Item</button>
</form>
</section>