<h2>Edit Your Movie</h2>


<form action="{{movie.id}}" method="post">
    <label>
        Title: 
        <input type="text" name="title" value="{{movie.title}}">
    </label>
    <label>
        Genre: 
        <input type="text" name="genre" value="{{movie.genre}}">
    </label>
    <label>
        Plot: 
        <input type="text" name="plot" value="{{movie.plot}}">
    </label>

    <br>
    <button type="submit">Update</button>
</form>

